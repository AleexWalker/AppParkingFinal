<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.UserMenu"
    android:background="@color/lightWhite_to_NightDarker">

    <View
        android:id="@+id/viewHeaderBackground"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_125sdp"
        android:background="@color/primary"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginLeft="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:text="@string/parking_app"
        android:textColor="@color/white"
        android:textSize="@dimen/_20ssp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/boton_search"
        android:layout_width="@dimen/_26sdp"
        android:layout_height="@dimen/_26sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:layout_marginRight="@dimen/_16sdp"
        android:src="@drawable/ic_search"
        app:layout_constraintBottom_toBottomOf="@+id/textTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textTitle"
        android:tint="@color/white"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        app:cardBackgroundColor="@color/cardNightMode_Primary"
        app:cardCornerRadius="@dimen/_20sdp"
        app:cardElevation="@dimen/_7sdp"

        app:layout_constraintBottom_toBottomOf="@+id/viewHeaderBackground"
        app:layout_constraintTop_toBottomOf="@+id/viewHeaderBackground">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_14sdp">

            <TextView
                android:id="@+id/textViews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Datos:"
                android:textColor="@color/white"
                android:textSize="@dimen/_14ssp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/more"
                android:textColor="@color/primary"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <LinearLayout
                android:id="@+id/layoutClients"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintEnd_toStartOf="@+id/layoutImpacted"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViews">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/_28sdp"
                    android:layout_height="@dimen/_28sdp"
                    android:src="@drawable/man"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:text="Cliente"
                    android:textColor="@color/secondary_text"
                    android:textSize="@dimen/_10ssp"/>

                <TextView
                    android:id="@+id/textNombre"
                    android:hint="@string/sin_determinar"
                    android:textColorHint="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_8ssp"
                    android:textAlignment="center"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutImpacted"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintEnd_toStartOf="@+id/layoutFollowing"
                app:layout_constraintStart_toEndOf="@+id/layoutClients"
                app:layout_constraintTop_toBottomOf="@+id/textViews">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/_28sdp"
                    android:layout_height="@dimen/_28sdp"
                    android:src="@drawable/mapa"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:text="@string/ciudad"
                    android:textColor="@color/secondary_text"
                    android:textSize="@dimen/_10ssp"/>

                <TextView
                    android:id="@+id/textCiudad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/sin_determinar"
                    android:textColorHint="@color/white"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_8ssp"
                    android:textAlignment="center"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutFollowing"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/layoutImpacted"
                app:layout_constraintTop_toBottomOf="@+id/textViews">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/_28sdp"
                    android:layout_height="@dimen/_28sdp"
                    android:src="@drawable/coche"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:text="@string/marca_coche"
                    android:textColor="@color/secondary_text"
                    android:textSize="@dimen/_10ssp"/>

                <TextView
                    android:id="@+id/textMarca"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:hint="@string/sin_determinar"
                    android:textColorHint="@color/white"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_8ssp"/>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:overScrollMode="never"
        android:scrollbars="vertical"
        android:scrollbarThumbVertical="@color/lightDark_to_NightWhite"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewHeaderBackground"

        android:layout_marginTop="@dimen/_45sdp"
        android:paddingTop="@dimen/_16sdp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:paddingBottom="@dimen/_16sdp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/itemUserData"
                android:layout_width="@dimen/_130sdp"
                android:layout_height="@dimen/_80sdp"

                app:cardBackgroundColor="@color/cardNightMode_Primary"
                app:cardCornerRadius="@dimen/_15sdp"
                app:cardElevation="@dimen/_5sdp"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/itemLocationSave"

                app:layout_constraintHorizontal_bias="1"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_16sdp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageItemProfile"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"

                        android:src="@drawable/man"

                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"

                        android:layout_marginStart="@dimen/_5sdp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:textSize="@dimen/_10ssp"
                        android:fontFamily="@font/montserrat_medium"
                        android:textStyle="bold"
                        android:text="PROFILE"
                        android:textColor="@color/textWhite75"

                        app:layout_constraintTop_toTopOf="@+id/imageItemProfile"
                        app:layout_constraintStart_toEndOf="@+id/imageItemProfile"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/itemLocationSave"
                android:layout_width="@dimen/_130sdp"
                android:layout_height="@dimen/_38sdp"

                app:cardBackgroundColor="@color/cardNightMode_Primary"

                app:cardCornerRadius="@dimen/_10sdp"
                app:cardElevation="@dimen/_5sdp"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintStart_toEndOf="@+id/itemUserData"
                app:layout_constraintHorizontal_bias="0"

                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_16sdp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageItemSave"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"

                        android:src="@drawable/item_1"

                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"

                        android:layout_marginStart="@dimen/_8sdp"/>

                    <TextView
                        android:id="@+id/textLocationSave"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:fontFamily="@font/montserrat_medium"
                        android:textColor="@color/white"
                        android:text="MAPS SAVE LOCATION"
                        android:textSize="@dimen/_7ssp"

                        app:layout_constraintTop_toTopOf="@+id/imageItemSave"
                        app:layout_constraintStart_toEndOf="@+id/imageItemSave"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <TextView
                        android:id="@+id/textLocationSaveDay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:fontFamily="@font/montserrat_medium"
                        android:textColor="@color/secondary_text"
                        android:hint="TODAY: 12:30"
                        android:textColorHint="@color/secondary_text"
                        android:textSize="@dimen/_5ssp"

                        app:layout_constraintBottom_toBottomOf="@+id/imageItemSave"
                        app:layout_constraintStart_toStartOf="@+id/textLocationSave" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/itemLocationLoad"
                android:layout_width="@dimen/_130sdp"
                android:layout_height="@dimen/_38sdp"

                app:cardBackgroundColor="@color/cardNightMode_Primary"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardElevation="@dimen/_5sdp"

                app:layout_constraintStart_toStartOf="@id/itemLocationSave"
                app:layout_constraintBottom_toBottomOf="@+id/itemUserData"
                app:layout_constraintEnd_toEndOf="@id/itemLocationSave">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageItemLoad"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"

                        android:src="@drawable/item_2"

                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"

                        android:layout_marginStart="@dimen/_8sdp"/>

                    <TextView
                        android:id="@+id/textLocationLoad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:fontFamily="@font/montserrat_medium"
                        android:textColor="@color/white"
                        android:text="MAPS LAST LOCATION"
                        android:textSize="@dimen/_7ssp"

                        app:layout_constraintTop_toTopOf="@+id/imageItemLoad"
                        app:layout_constraintStart_toEndOf="@+id/imageItemLoad"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/textLocationLoadStreet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:fontFamily="@font/montserrat_medium"
                        android:textColor="@color/secondary_text"
                        android:hint="STREET, Nº"
                        android:textColorHint="@color/secondary_text"
                        android:textSize="@dimen/_5ssp"

                        app:layout_constraintBottom_toBottomOf="@+id/imageItemLoad"
                        app:layout_constraintStart_toStartOf="@+id/textLocationLoad" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/itemLocationParkings"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"

                app:cardBackgroundColor="@color/cardNightMode_Primary"
                app:cardCornerRadius="@dimen/_15sdp"
                app:cardElevation="@dimen/_5sdp"

                app:layout_constraintTop_toBottomOf="@+id/itemUserData"
                app:layout_constraintStart_toStartOf="@id/itemLocationSave"
                app:layout_constraintEnd_toEndOf="@id/itemUserData"

                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_16sdp"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginEnd="@dimen/_16sdp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageItemParking"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"

                        android:src="@drawable/item_3_1"

                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"

                        android:layout_marginStart="@dimen/_8sdp"/>

                    <TextView
                        android:id="@+id/textLocationParkingTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:textSize="@dimen/_10ssp"
                        android:fontFamily="@font/montserrat_medium"
                        android:textStyle="bold"
                        android:text="NEAR PARKINGS"
                        android:textColor="@color/textWhite75"

                        app:layout_constraintTop_toTopOf="@+id/imageItemParking"
                        app:layout_constraintStart_toEndOf="@+id/imageItemParking"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.05"/>

                    <TextView
                        android:id="@+id/textLocationParkingData"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:fontFamily="@font/montserrat_medium"
                        android:textColor="@color/secondary_text"
                        android:hint="STREET, Nº"
                        android:textColorHint="@color/secondary_text"
                        android:textSize="@dimen/_7ssp"

                        app:layout_constraintBottom_toBottomOf="@+id/imageItemParking"
                        app:layout_constraintStart_toStartOf="@+id/textLocationParkingTitle" />

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/itemCronometro"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        app:cardElevation="@dimen/_5sdp"
                        app:cardCornerRadius="@dimen/_14sdp"
                        app:cardBackgroundColor="#CC1D2545"

                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"

                        android:layout_marginEnd="@dimen/_5sdp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            android:background="@android:color/transparent">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/chronometer"

                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"

                                android:layout_marginHorizontal="@dimen/_5sdp"
                                android:layout_marginVertical="@dimen/_5sdp"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </com.google.android.material.card.MaterialCardView>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/itemPay"
                android:layout_width="@dimen/_130sdp"
                android:layout_height="@dimen/_50sdp"

                android:layout_marginTop="@dimen/_8sdp"

                app:cardBackgroundColor="@color/cardNightMode_Primary"
                app:cardCornerRadius="@dimen/_15sdp"
                app:cardElevation="@dimen/_5sdp"

                app:layout_constraintEnd_toEndOf="@id/itemUserData"
                app:layout_constraintTop_toBottomOf="@+id/itemLocationParkings"

                app:layout_constraintVertical_bias="1.0"
                app:layout_constraintHorizontal_bias="1">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageItemPay"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"

                        android:layout_marginStart="@dimen/_10sdp"
                        android:src="@drawable/card_1"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"

                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:textSize="@dimen/_8ssp"
                        android:fontFamily="@font/montserrat_medium"
                        android:textStyle="bold"
                        android:text="PAY BLUE ZONE"
                        android:textColor="@color/textWhite75"

                        app:layout_constraintTop_toTopOf="@+id/imageItemPay"
                        app:layout_constraintStart_toEndOf="@+id/imageItemPay"
                        app:layout_constraintEnd_toEndOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/itemSwapParking"
                android:layout_width="@dimen/_130sdp"
                android:layout_height="@dimen/_50sdp"

                app:cardBackgroundColor="@color/cardNightMode_Primary"
                app:cardCornerRadius="@dimen/_15sdp"
                app:cardElevation="@dimen/_5sdp"

                app:layout_constraintTop_toBottomOf="@+id/itemPay"
                app:layout_constraintStart_toStartOf="@+id/itemPay"
                app:layout_constraintEnd_toEndOf="@id/itemPay"
                app:layout_constraintBottom_toTopOf="@+id/itemContact">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageItemSwap"
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"

                        android:src="@drawable/swap_1"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"

                        android:layout_marginStart="@dimen/_8sdp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:textSize="@dimen/_8ssp"
                        android:fontFamily="@font/montserrat_medium"
                        android:textStyle="bold"
                        android:text="SWAP PARKING"
                        android:textColor="@color/textWhite75"

                        app:layout_constraintTop_toTopOf="@+id/imageItemSwap"
                        app:layout_constraintStart_toEndOf="@+id/imageItemSwap"
                        app:layout_constraintEnd_toEndOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/itemContact"
                android:layout_width="@dimen/_130sdp"
                android:layout_height="@dimen/_50sdp"

                app:cardBackgroundColor="@color/cardNightMode_Primary"
                app:cardCornerRadius="@dimen/_15sdp"
                app:cardElevation="@dimen/_5sdp"

                app:layout_constraintEnd_toEndOf="@id/itemPay"
                app:layout_constraintStart_toStartOf="@id/itemPay"
                app:layout_constraintBottom_toBottomOf="@+id/itemRewards">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageItemContact"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"

                        android:src="@drawable/cliente"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"

                        android:layout_marginStart="@dimen/_8sdp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:textSize="@dimen/_8ssp"
                        android:fontFamily="@font/montserrat_medium"
                        android:textStyle="bold"
                        android:text="CONTACT"
                        android:textColor="@color/textWhite75"

                        app:layout_constraintTop_toTopOf="@+id/imageItemContact"
                        app:layout_constraintStart_toEndOf="@+id/imageItemContact"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_1sdp"
                        android:background="#80FFFFFF"

                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/imageItemContact"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"

                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_marginEnd="@dimen/_8sdp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:textSize="@dimen/_8ssp"
                        android:fontFamily="@font/montserrat_medium"
                        android:textStyle="bold"
                        android:text="MESSAGES"
                        android:textColor="@color/textWhite75"

                        app:layout_constraintBottom_toBottomOf="@+id/imageItemContact"
                        app:layout_constraintStart_toEndOf="@+id/imageItemContact"
                        app:layout_constraintEnd_toEndOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/itemRewards"
                android:layout_width="@dimen/_130sdp"
                android:layout_height="@dimen/_160sdp"

                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_16sdp"
                app:cardBackgroundColor="@color/cardNightMode_Primary"

                app:cardCornerRadius="@dimen/_15sdp"
                app:cardElevation="@dimen/_5sdp"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@id/itemLocationSave"

                app:layout_constraintTop_toBottomOf="@+id/itemLocationParkings">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"

                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_8sdp"

                        android:src="@drawable/rewards"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"

                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.0" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
